<h1> <%= action_name %> </h1>


<% if @task.errors.any? %>
  <h4>Error Message(s):</h4>
  <ul>
    <% @task.errors.each do |column, message| %>
      <li>
        <strong><%= "#{column.capitalize}: " %></strong> <%= message.capitalize %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @task do |f| %>
  <fieldset>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </p>

    <%= f.submit button_title, class: "task-button" %>
  </fieldset>
<% end %>
